<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <style>
        /* Make the navigation bar sticky */
        nav {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: #333;
            color: white;
            padding: 10px 0;
            z-index: 1000; /* Ensure it stays above other elements */
        }

        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            text-align: center;
        }

        nav ul li {
            display: inline;
            margin-right: 20px;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 18px;
        }

        /* Add some padding to the top of the page content to prevent overlap */
        body {
            padding-top: 60px; /* Adjust this value if the nav bar height changes */
        }

        /* Additional styling */
        ul {
            margin-top: 20px;
        }

        li {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h1>Your Shopping Cart</h1>

    <!-- Cart Items -->
    <ul>
        <% if (cart.length > 0) { %>
            <% cart.forEach(function(item) { %>
                <li>
                    <strong><%= item.title %></strong> - $<%= item.price %>
                    <% if (item.image) { %>
                        <img src="<%= item.image %>" alt="<%= item.title %>" style="max-width: 100px;">
                    <% } %>
                    <form action="/users/store/remove-from-cart" method="POST" style="display:inline;">
                        <input type="hidden" name="title" value="<%= item.title %>">
                        <button type="submit">Remove</button>
                    </form>                    
                </li>
            <% }); %>
        <% } else { %>
            <p>Your cart is empty.</p>
        <% } %>
    </ul>

    <!-- Navigation -->
    <nav>
        <ul>
            <li><a href="/users/store">Store</a></li>
            <li><a href="/users/cart">Cart</a></li>
            <li><a href="/users/logout">Logout</a></li>
        </ul>
    </nav>

    <!-- Checkout Button -->
    <form action="/checkout" method="POST">
        <button type="submit">Checkout</button>
    </form>
</body>
</html>
